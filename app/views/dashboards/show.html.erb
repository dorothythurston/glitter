<h2 id="content-header"><%= t('.welcome_message')%></h2>

<div id="main-content">
  <div id="news-feed">
    <h2 id="news-feed-header-text"><%= t('.news_feed_header') %></h2>
    <% if current_user %>
      <ul>
        <%= render @activities %>
      </ul>
      <%= paginate @activities %>
    <% end %>
  </div>
</div>

<div id="side-nav">
  <% if current_user %>
    <%= render 'items/new', item: @item %>
  <% else %>
    <%= link_to t('.login'), new_session_path %>
  <% end %>
</div>




